<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProgrammerCalc" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand</item>
        <item name="colorPrimaryVariant">@color/brand</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand</item>
        <item name="colorSecondaryVariant">@color/brand</item>
        <item name="colorOnSecondary">@color/background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CalculatorButton">
        <item name="android:textSize">@dimen/textButton</item>
    </style>
    <style name="CalculatorButton.Number">
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CalculatorButton.clear">
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:textColor">@color/brand</item>
    </style>
    <style name="CalculatorButton.Result">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>